# Ralph Deep Research - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Anthropic API Key (required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# DATABASE SETTINGS (optional, defaults provided)
# =============================================================================

# SQLite database URL (default: local file)
DATABASE_URL=sqlite+aiosqlite:///./ralph.db

# =============================================================================
# SERVER SETTINGS (optional, defaults provided)
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to true for development)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SCALABILITY LIMITS (optional, MVP defaults provided)
# =============================================================================

# Maximum concurrent research sessions
MAX_CONCURRENT_SESSIONS=10

# Maximum rounds per research session
MAX_ROUNDS_PER_SESSION=10

# Maximum tasks per research round
MAX_TASKS_PER_ROUND=10

# Round timeout in seconds (includes parallel execution)
ROUND_TIMEOUT_SECONDS=300

# =============================================================================
# EXTERNAL API KEYS (optional, for data collection)
# =============================================================================

# -----------------------------------------------------------------------------
# Crypto & On-Chain APIs
# -----------------------------------------------------------------------------

# BlockLens API for Bitcoin on-chain analytics (LTH/STH, MVRV, SOPR)
# Enterprise tier - 100,000 calls/day
BLOCKLENS_API_KEY=

# Etherscan API for Ethereum data
# Get your key at: https://etherscan.io/apis
ETHERSCAN_API_KEY=

# Dune Analytics API for custom on-chain queries
# Get your key at: https://dune.com/settings/api
# Note: 2500 credits/month on free tier
DUNE_API_KEY=

# -----------------------------------------------------------------------------
# Financial & Stock APIs
# -----------------------------------------------------------------------------

# Finnhub API for stock data
# Get your key at: https://finnhub.io/
FINNHUB_API_KEY=

# FRED API for macroeconomic data (Federal Reserve)
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# Financial Modeling Prep API
# Get your key at: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=

# -----------------------------------------------------------------------------
# Research & News APIs
# -----------------------------------------------------------------------------

# Serper API for Google Search
# Get your key at: https://serper.dev/
SERPER_API_KEY=

# NewsAPI for news aggregation
# Get your key at: https://newsapi.org/
NEWSAPI_KEY=

# CryptoPanic API for crypto news
# Get your key at: https://cryptopanic.com/developers/api/
CRYPTOPANIC_KEY=

# Crunchbase API for company/startup data
# Get your key at: https://data.crunchbase.com/docs
CRUNCHBASE_API_KEY=
